{
    "manifest_version": 2, 
    "name": "Weather Cursor Chrome Extension",
    "description": "Cursor will change depending on the weather.",
    "version": "1.0",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "allFrames": true,
            "js": ["/js/jquery.js", "/js/content.js"],
            "css": ["/css/style.css"]
       }
     ],
    "action": {
        "default_icon": {
            "32":"images/weather-01.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [ 
        "images/*.jpg",
        "images/*.png",
        "images/*.svg" 
     ] 
}
